@using System
@using System.Collections.Generic
@using System.Linq
@using System.Threading.Tasks
@using Sandbox;
@using Sandbox.Network
@inherits PanelComponent
@namespace Facepunch.Arena

<root>
	<div class="center">
		<div class="left">
			<div class="title">
				<img class="image-additive star2-speen" src="materials/InfernoLogo.png" style="width: 260px; height: 260px"/>
			</div>

			<div class="explanation">
				<p>
					Engage in incendiary based fun!
				</p>
				<p>
					Melt your foes with prediction and precision.
				</p>
				<p>
					May the best Scorcher win in this WIP Free-For-All mode.
				</p>
				<p>
					⠀
				</p>
				<p>
					Tip: You can Charge and Detonate the rocket by holding in or letting go of Fire.
				</p>
			</div>

			<div class="button-list">
				<div class="button" onclick=@( () => CreateServer() )>
					Create your Ring
				</div>

				<div class="button" onclick=@( () => Quit() )>
					Quit
				</div>
			</div>
		</div>

		<div class="lobby-list">
			<div class="header">
				<div class="title">Servers</div>
			</div>

			@if ( IsRefreshing )
			{
				<label>Refreshing the server list, please wait...</label>
			}
			else if ( List.Count == 0 )
			{
				<label>No servers were found, create one to play.</label>
			}
			else
			{
				<div class="button-list">
					@foreach ( var lobby in List )
					{
						<div class="button" onclick=@( () => OpenLobby( lobby ) )>
							<div class="title">
								@lobby.Name
							</div>

							<div class="meta">
								<div class="map">
									@lobby.Map
								</div>

								<div class="count">
									@lobby.Members / @lobby.MaxMembers
								</div>
							</div>
						</div>
					}
				</div>
			}
		</div>
	</div>
</root>

@code
{
	private bool IsRefreshing { get; set; }
	private List<LobbyInformation> List { get; set; } = new();

	protected override void OnFixedUpdate()
	{
	}

	protected override void OnEnabled()
	{
		base.OnEnabled();

		_ = RefreshLobbyList();
	}

	protected override void OnUpdate()
	{
	}

	protected override int BuildHash() => HashCode.Combine( RealTime.Now );

	private async Task RefreshLobbyList()
	{
		while ( true )
		{
			IsRefreshing = true;
			StateHasChanged();

			List = await Networking.QueryLobbies();

			IsRefreshing = false;
			StateHasChanged();

			await Task.DelayRealtimeSeconds( 5f );
		}
	}

	private void OpenLobby( LobbyInformation lobby )
	{
		GameNetworkSystem.Connect( lobby.LobbyId );
	}

	private void CreateServer()
	{
		Game.ActiveScene.LoadFromFile( "scenes/inferno.scene" );
	}

	private void Quit()
	{
		Game.Close();
	}
}
